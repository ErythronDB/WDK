#!/usr/bin/perl

use Carp;

my $GUS_HOME=$ENV{GUS_HOME};

my $javaDir = "$GUS_HOME/lib/java";

opendir(DATADIR, $javaDir) || &confess ("Error:  Could not open $javaDir.  Please check the directory exists and try again.");

my $CLASSPATH = "";

while (my $nextFileName = readdir(DATADIR)){
    if ($nextFileName =~ /.*\.jar$/){
	$CLASSPATH .= "$javaDir/$nextFileName" . ":"
    }
}

my $args = "";
foreach my $arg (@ARGV) {
    $args .= ($arg =~ /\-/ ? " $arg" : " \"$arg\"");
}

my $cmd = "java  -DconfigDir=$GUS_HOME/config -DcmdName=wdkHistoryTest -DschemaFile=$GUS_HOME/lib/rng/wdkModel.rng -DhistorySchemaFile=$GUS_HOME/lib/rng/historyModel.rng -classpath $CLASSPATH org.gusdb.wdk.model.test.HistoryTester $args";

system($cmd);


