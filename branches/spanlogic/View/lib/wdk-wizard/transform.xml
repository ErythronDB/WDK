<?xml version="1.0" encoding="utf-8"?>
<wdkWizard name="transform" 
           display="Transform to..."
           nextStage="list">
  <description>Transform the result.</description>
  
  <stage name="list" 
         display="Select a search" 
         view="/wdk/jsp/wizard/transform_list.jsp">
    <description>Please select a transform.</description>
    <nextStage label="detail" stage="detail" />
  </stage>
  <stage name="detail" 
         display="Select transform params" 
         view="/wdk/jsp/wizard/transform_params.jsp">
    <description>Select the parameters for the transform.</description>
  </stage>
</wdkWizard>
